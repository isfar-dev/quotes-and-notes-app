<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        android:background="@color/white"
        >


        <!--========= Image Slider ==============-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_margin="@dimen/_8sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            >

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_period="1500"
                app:iss_delay="1500"
                app:iss_text_align="CENTER"
                />

        </androidx.cardview.widget.CardView>
        <!--========= Image Slider ==============-->


        <!--=========== Category Area ==========================-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_6sdp"
            />

        <!--===== Category RecyclerView ======-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:overScrollMode="never"
            />


        <!--===== Button All Categories =========-->
        <LinearLayout
            android:id="@+id/linear_show_all_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@drawable/bg_button_view"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View More"
                android:textSize="@dimen/_15ssp"
                android:fontFamily="@font/robotocondensed_medium"
                android:textColor="@color/green"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_6sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@drawable/bg_button_view"
                android:layout_gravity="center"

                />
        </LinearLayout>
        <!--===== Button All Categories =========-->

        <!--============ Category Area ============================-->


        <!--============ Quotes Area ==============================-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!--============ Texts ========================-->
            <RelativeLayout
                android:id="@+id/linear_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Quotes"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />

                <TextView
                    android:id="@+id/tv_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/robotocondensed_regular"
                    android:textColor="@color/green"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
            <!--============ Texts ========================-->

            <!--===== Category RecyclerView ======-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quotes_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_below="@+id/linear_text"
                />

        </RelativeLayout>

        <!--============ Quotes Area ==============================-->

    </LinearLayout>

</androidx.core.widget.NestedScrollView>