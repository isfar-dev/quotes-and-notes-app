<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CategoryListActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <!-- Ad Container -->
    <LinearLayout
        android:id="@+id/ad_container_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        />


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/categorylist_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_46sdp"
        android:background="@color/white"
        app:title="All Categories"
        app:titleCentered="true"
        app:navigationIcon="@drawable/back_arrow"
        app:titleTextAppearance="@style/RobotoTextViewStyle"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@drawable/shadow"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        />


</LinearLayout>